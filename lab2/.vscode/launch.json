{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Bootloader",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bootloader/bootloader.elf",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/bootloader",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "aarch64-linux-gnu-gdb",
            "miDebuggerServerAddress": "localhost:1234",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set architecture to ARM64",
                    "text": "set architecture aarch64",
                    "ignoreFailures": false
                }
            ]
        }
    ]
} 